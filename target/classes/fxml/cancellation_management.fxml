<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.6"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.jetstream.controllers.CancellationManagementController"
            prefHeight="700.0" prefWidth="1200.0">

    <!-- Top Bar -->
    <top>
        <HBox style="-fx-background-color: #1e3c72; -fx-padding: 15 15 15 15;" spacing="20" alignment="CENTER_LEFT">
            <Label text="âŒ JetStream Airlines - Cancellation Management" style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Back to Dashboard" onAction="#handleBackToDashboard"
                    style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-font-size: 12; -fx-padding: 8 15 8 15; -fx-background-radius: 5;"/>
        </HBox>
    </top>

    <!-- Left Sidebar -->
    <left>
        <VBox style="-fx-background-color: #f5f5f5; -fx-padding: 20 20 20 20;" spacing="15" prefWidth="250">
            <Label text="CANCELLATION OPERATIONS" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #666;"/>
            <Separator/>

            <!-- Search Cancellations -->
            <Label text="Search Cancellations" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #333;"/>
            <TextField fx:id="txtSearchCustomer" promptText="Search by Customer Code" prefWidth="200"/>
            <ComboBox fx:id="cmbSearchClass" promptText="Filter by Class" prefWidth="200"/>
            <Button fx:id="btnSearch" text="Search" onAction="#handleSearch" prefWidth="200"
                    style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-padding: 10 10 10 10;"/>
            <Button fx:id="btnClearSearch" text="Clear" onAction="#handleClearSearch" prefWidth="200"
                    style="-fx-background-color: #666; -fx-text-fill: white; -fx-padding: 8 8 8 8;"/>
            <Separator/>

            <!-- Cancellation Actions -->
            <Label text="Selected Cancellation Actions" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #333;"/>
            <Button fx:id="btnViewDetails" text="View Details" onAction="#handleViewDetails" prefWidth="200"
                    style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-padding: 8 8 8 8;"/>
            <Button fx:id="btnProcessRefund" text="Process Refund" onAction="#handleProcessRefund" prefWidth="200"
                    style="-fx-background-color: #ff9800; -fx-text-fill: white; -fx-padding: 8 8 8 8;"/>
        </VBox>
    </left>

    <!-- Center Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 30 30 30 30;">

            <!-- Statistics Cards -->
            <GridPane hgap="20" vgap="20">
                <!-- Total Cancellations -->
                <VBox style="-fx-background-color: white; -fx-padding: 20 20 20 20; -fx-background-radius: 10;" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <effect><DropShadow color="#00000033" radius="10"/></effect>
                    <Label text="Total Cancellations" style="-fx-font-size: 14; -fx-text-fill: #666;"/>
                    <Label fx:id="totalCancellationsLabel" text="0" style="-fx-font-size: 36; -fx-font-weight: bold; -fx-text-fill: #1e3c72;"/>
                    <Label text="All time cancellations" style="-fx-font-size: 11; -fx-text-fill: #999;"/>
                </VBox>

                <!-- Pending Refunds -->
                <VBox style="-fx-background-color: white; -fx-padding: 20 20 20 20; -fx-background-radius: 10;" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <effect><DropShadow color="#00000033" radius="10"/></effect>
                    <Label text="Pending Refunds" style="-fx-font-size: 14; -fx-text-fill: #666;"/>
                    <Label fx:id="pendingRefundsLabel" text="0" style="-fx-font-size: 36; -fx-font-weight: bold; -fx-text-fill: #f44336;"/>
                    <Label text="Awaiting processing" style="-fx-font-size: 11; -fx-text-fill: #999;"/>
                </VBox>

                <!-- Total Refund Amount -->
                <VBox style="-fx-background-color: white; -fx-padding: 20 20 20 20; -fx-background-radius: 10;" GridPane.columnIndex="2" GridPane.rowIndex="0">
                    <effect><DropShadow color="#00000033" radius="10"/></effect>
                    <Label text="Total Refund Amount" style="-fx-font-size: 14; -fx-text-fill: #666;"/>
                    <Label fx:id="totalRefundAmountLabel" text="R 0.00" style="-fx-font-size: 36; -fx-font-weight: bold; -fx-text-fill: #2196f3;"/>
                    <Label text="Processed refunds" style="-fx-font-size: 11; -fx-text-fill: #999;"/>
                </VBox>
            </GridPane>

            <!-- Cancellations Table -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20 20 20 20; -fx-background-radius: 10;">
                <effect><DropShadow color="#00000033" radius="10"/></effect>
                <Label text="Cancellation List" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                <TableView fx:id="cancellationsTable" prefHeight="400">
                    <columns>
                        <TableColumn fx:id="colCustomerCode" text="Customer Code" prefWidth="120"/>
                        <TableColumn fx:id="colClass" text="Class" prefWidth="100"/>
                        <TableColumn fx:id="colSeatNumber" text="Seat Number" prefWidth="100"/>
                        <TableColumn fx:id="colDaysLeft" text="Days Left" prefWidth="80"/>
                        <TableColumn fx:id="colHoursLeft" text="Hours Left" prefWidth="80"/>
                        <TableColumn fx:id="colBasicAmount" text="Basic Amount" prefWidth="100"/>
                        <TableColumn fx:id="colCancelAmount" text="Cancel Amount" prefWidth="100"/>
                        <TableColumn fx:id="colRefundStatus" text="Refund Status" prefWidth="120"/>
                    </columns>
                </TableView>
            </VBox>

        </VBox>
    </center>

</BorderPane>
