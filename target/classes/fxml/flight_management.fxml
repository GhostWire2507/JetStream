<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.6"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.jetstream.controllers.FlightManagementController"
            prefHeight="700.0" prefWidth="1200.0">

    <!-- Top Bar -->
    <top>
        <HBox style="-fx-background-color: #1e3c72; -fx-padding: 15 15 15 15;" spacing="20" alignment="CENTER_LEFT">
            <Label text="âœˆ JetStream Airlines - Flight Management" style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Back to Dashboard" onAction="#handleBackToDashboard"
                    style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-font-size: 12; -fx-padding: 8 15 8 15; -fx-background-radius: 5;"/>
        </HBox>
    </top>

    <!-- Left Sidebar -->
    <left>
        <VBox style="-fx-background-color: #f5f5f5; -fx-padding: 20 20 20 20;" spacing="15" prefWidth="250">
            <Label text="FLIGHT OPERATIONS" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #666;"/>
            <Separator/>

            <!-- Add Flight Form -->
            <Label text="Add New Flight" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #333;"/>
            <TextField fx:id="txtFlightNumber" promptText="Flight Number (e.g., JS100)" prefWidth="200"/>
            <TextField fx:id="txtOrigin" promptText="Origin" prefWidth="200"/>
            <TextField fx:id="txtDestination" promptText="Destination" prefWidth="200"/>
            <TextField fx:id="txtCapacity" promptText="Total Capacity" prefWidth="200"/>
            <Button fx:id="btnAddFlight" text="Add Flight" onAction="#handleAddFlight" prefWidth="200"
                    style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-padding: 10 10 10 10;"/>
            <Separator/>

            <!-- Edit Flight Form -->
            <Label text="Edit Selected Flight" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #333;"/>
            <TextField fx:id="txtEditFlightNumber" promptText="Flight Number" prefWidth="200"/>
            <TextField fx:id="txtEditOrigin" promptText="Origin" prefWidth="200"/>
            <TextField fx:id="txtEditDestination" promptText="Destination" prefWidth="200"/>
            <TextField fx:id="txtEditCapacity" promptText="Total Capacity" prefWidth="200"/>
            <HBox spacing="10">
                <Button fx:id="btnUpdateFlight" text="Update" onAction="#handleUpdateFlight" prefWidth="90"
                        style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-padding: 8 8 8 8;"/>
                <Button fx:id="btnDeleteFlight" text="Delete" onAction="#handleDeleteFlight" prefWidth="90"
                        style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-padding: 8 8 8 8;"/>
            </HBox>
        </VBox>
    </left>

    <!-- Center Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 30 30 30 30;">

            <!-- Statistics Cards -->
            <GridPane hgap="20" vgap="20">
                <!-- Total Flights -->
                <VBox style="-fx-background-color: white; -fx-padding: 20 20 20 20; -fx-background-radius: 10;" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <effect><DropShadow color="#00000033" radius="10"/></effect>
                    <Label text="Total Flights" style="-fx-font-size: 14; -fx-text-fill: #666;"/>
                    <Label fx:id="totalFlightsLabel" text="0" style="-fx-font-size: 36; -fx-font-weight: bold; -fx-text-fill: #1e3c72;"/>
                    <Label text="Active flights in system" style="-fx-font-size: 11; -fx-text-fill: #999;"/>
                </VBox>

                <!-- Total Capacity -->
                <VBox style="-fx-background-color: white; -fx-padding: 20 20 20 20; -fx-background-radius: 10;" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <effect><DropShadow color="#00000033" radius="10"/></effect>
                    <Label text="Total Capacity" style="-fx-font-size: 14; -fx-text-fill: #666;"/>
                    <Label fx:id="totalCapacityLabel" text="0" style="-fx-font-size: 36; -fx-font-weight: bold; -fx-text-fill: #4caf50;"/>
                    <Label text="Available seats across all flights" style="-fx-font-size: 11; -fx-text-fill: #999;"/>
                </VBox>
            </GridPane>

            <!-- Flights Table -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20 20 20 20; -fx-background-radius: 10;">
                <effect><DropShadow color="#00000033" radius="10"/></effect>
                <Label text="Flight List" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                <TableView fx:id="flightsTable" prefHeight="400">
                    <columns>
                        <TableColumn fx:id="colFlightNumber" text="Flight Number" prefWidth="120"/>
                        <TableColumn fx:id="colOrigin" text="Origin" prefWidth="120"/>
                        <TableColumn fx:id="colDestination" text="Destination" prefWidth="120"/>
                        <TableColumn fx:id="colCapacity" text="Capacity" prefWidth="100"/>
                        <TableColumn fx:id="colExecutiveSeats" text="Executive Seats" prefWidth="120"/>
                        <TableColumn fx:id="colEconomySeats" text="Economy Seats" prefWidth="120"/>
                    </columns>
                </TableView>
            </VBox>

        </VBox>
    </center>

</BorderPane>
