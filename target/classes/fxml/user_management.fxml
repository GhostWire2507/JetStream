<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.6"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.jetstream.controllers.UserManagementController"
            prefHeight="700.0" prefWidth="1200.0">

    <!-- Top Bar -->
    <top>
        <HBox style="-fx-background-color: #1e3c72; -fx-padding: 15 15 15 15;" spacing="20" alignment="CENTER_LEFT">
            <Label text="ðŸ‘¥ JetStream Airlines - User Management" style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Back to Dashboard" onAction="#handleBackToDashboard"
                    style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-font-size: 12; -fx-padding: 8 15 8 15; -fx-background-radius: 5;"/>
        </HBox>
    </top>

    <!-- Left Sidebar -->
    <left>
        <VBox style="-fx-background-color: #f5f5f5; -fx-padding: 20 20 20 20;" spacing="15" prefWidth="250">
            <Label text="USER OPERATIONS" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #666;"/>
            <Separator/>

            <!-- Add User Form -->
            <Label text="Add New User" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #333;"/>
            <TextField fx:id="txtUsername" promptText="Username" prefWidth="200"/>
            <PasswordField fx:id="txtPassword" promptText="Password" prefWidth="200"/>
            <TextField fx:id="txtFullName" promptText="Full Name" prefWidth="200"/>
            <TextField fx:id="txtEmail" promptText="Email" prefWidth="200"/>
            <ComboBox fx:id="cmbRole" promptText="Select Role" prefWidth="200"/>
            <Button fx:id="btnAddUser" text="Add User" onAction="#handleAddUser" prefWidth="200"
                    style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-padding: 10 10 10 10;"/>
            <Separator/>

            <!-- Edit User Form -->
            <Label text="Edit Selected User" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #333;"/>
            <TextField fx:id="txtEditUsername" promptText="Username" prefWidth="200"/>
            <PasswordField fx:id="txtEditPassword" promptText="New Password (leave empty to keep)" prefWidth="200"/>
            <TextField fx:id="txtEditFullName" promptText="Full Name" prefWidth="200"/>
            <TextField fx:id="txtEditEmail" promptText="Email" prefWidth="200"/>
            <ComboBox fx:id="cmbEditRole" promptText="Select Role" prefWidth="200"/>
            <HBox spacing="10">
                <Button fx:id="btnUpdateUser" text="Update" onAction="#handleUpdateUser" prefWidth="90"
                        style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-padding: 8 8 8 8;"/>
                <Button fx:id="btnDeleteUser" text="Delete" onAction="#handleDeleteUser" prefWidth="90"
                        style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-padding: 8 8 8 8;"/>
            </HBox>
        </VBox>
    </left>

    <!-- Center Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 30 30 30 30;">

            <!-- Statistics Cards -->
            <GridPane hgap="20" vgap="20">
                <!-- Total Users -->
                <VBox style="-fx-background-color: white; -fx-padding: 20 20 20 20; -fx-background-radius: 10;" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <effect><DropShadow color="#00000033" radius="10"/></effect>
                    <Label text="Total Users" style="-fx-font-size: 14; -fx-text-fill: #666;"/>
                    <Label fx:id="totalUsersLabel" text="0" style="-fx-font-size: 36; -fx-font-weight: bold; -fx-text-fill: #1e3c72;"/>
                    <Label text="Registered users in system" style="-fx-font-size: 11; -fx-text-fill: #999;"/>
                </VBox>

                <!-- Active Users -->
                <VBox style="-fx-background-color: white; -fx-padding: 20 20 20 20; -fx-background-radius: 10;" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <effect><DropShadow color="#00000033" radius="10"/></effect>
                    <Label text="Active Users" style="-fx-font-size: 14; -fx-text-fill: #666;"/>
                    <Label fx:id="activeUsersLabel" text="0" style="-fx-font-size: 36; -fx-font-weight: bold; -fx-text-fill: #4caf50;"/>
                    <Label text="Currently active accounts" style="-fx-font-size: 11; -fx-text-fill: #999;"/>
                </VBox>

                <!-- Role Distribution -->
                <VBox style="-fx-background-color: white; -fx-padding: 20 20 20 20; -fx-background-radius: 10;" GridPane.columnIndex="2" GridPane.rowIndex="0">
                    <effect><DropShadow color="#00000033" radius="10"/></effect>
                    <Label text="Role Distribution" style="-fx-font-size: 14; -fx-text-fill: #666;"/>
                    <Label fx:id="roleDistributionLabel" text="A:0 S:0 C:0" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #ff9800;"/>
                    <Label text="Admin:Staff:Customer" style="-fx-font-size: 11; -fx-text-fill: #999;"/>
                </VBox>
            </GridPane>

            <!-- Users Table -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20 20 20 20; -fx-background-radius: 10;">
                <effect><DropShadow color="#00000033" radius="10"/></effect>
                <Label text="User List" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                <TableView fx:id="usersTable" prefHeight="400">
                    <columns>
                        <TableColumn fx:id="colUsername" text="Username" prefWidth="120"/>
                        <TableColumn fx:id="colFullName" text="Full Name" prefWidth="150"/>
                        <TableColumn fx:id="colEmail" text="Email" prefWidth="180"/>
                        <TableColumn fx:id="colRole" text="Role" prefWidth="100"/>
                        <TableColumn fx:id="colStatus" text="Status" prefWidth="80"/>
                        <TableColumn fx:id="colLastLogin" text="Last Login" prefWidth="120"/>
                    </columns>
                </TableView>
            </VBox>

        </VBox>
    </center>

</BorderPane>
