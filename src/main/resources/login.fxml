<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.6"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.jetstream.controllers.LoginController"
            prefHeight="600.0" prefWidth="900.0"
            style="-fx-background-color: #1e3c72;">

    <center>
        <VBox alignment="CENTER" spacing="25">
            <padding>
                <Insets top="50" right="50" bottom="50" left="50"/>
            </padding>

            <!-- Login Card -->
            <VBox alignment="CENTER" spacing="20" maxWidth="450"
                  style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 40 40 40 40;">
                <effect>
                    <DropShadow color="#00000066" radius="20" spread="0.2"/>
                </effect>

                <!-- Logo/Title -->
                <VBox alignment="CENTER" spacing="10">
                    <Label text="✈" style="-fx-font-size: 48; -fx-text-fill: #1e3c72;"/>
                    <Label text="JetStream Airlines" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #1e3c72;"/>
                    <Label text="Reservation System" style="-fx-font-size: 14; -fx-text-fill: #666666;"/>
                </VBox>

                <Separator prefWidth="350"/>

                <!-- Username Field -->
                <VBox spacing="8">
                    <Label text="Username" style="-fx-font-size: 13; -fx-text-fill: #333333; -fx-font-weight: bold;"/>
                    <TextField fx:id="usernameField" promptText="Enter your username"
                               style="-fx-font-size: 14; -fx-padding: 12 12 12 12; -fx-background-radius: 8; -fx-border-color: #cccccc; -fx-border-radius: 8; -fx-border-width: 1;"
                               prefWidth="350"/>
                </VBox>

                <!-- Password Field -->
                <VBox spacing="8">
                    <Label text="Password" style="-fx-font-size: 13; -fx-text-fill: #333333; -fx-font-weight: bold;"/>
                    <PasswordField fx:id="passwordField" promptText="Enter your password"
                                   style="-fx-font-size: 14; -fx-padding: 12 12 12 12; -fx-background-radius: 8; -fx-border-color: #cccccc; -fx-border-radius: 8; -fx-border-width: 1;"
                                   prefWidth="350"/>
                </VBox>

                <!-- Role Selection -->
                <VBox spacing="8">
                    <Label text="Login As" style="-fx-font-size: 13; -fx-text-fill: #333333; -fx-font-weight: bold;"/>
                    <HBox spacing="15" alignment="CENTER">
                        <RadioButton fx:id="adminRadio" text="Admin" style="-fx-font-size: 13;">
                            <toggleGroup>
                                <ToggleGroup fx:id="roleGroup"/>
                            </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="staffRadio" text="Staff" toggleGroup="$roleGroup" style="-fx-font-size: 13;"/>
                        <RadioButton fx:id="customerRadio" text="Customer" toggleGroup="$roleGroup" selected="true" style="-fx-font-size: 13;"/>
                    </HBox>
                </VBox>

                <!-- Error Message -->
                <Label fx:id="errorLabel" text="" style="-fx-text-fill: #d32f2f; -fx-font-size: 12;" wrapText="true" maxWidth="350"/>

                <!-- Login Button -->
                <Button fx:id="loginButton" text="LOGIN" onAction="#handleLogin"
                        prefWidth="350" prefHeight="45"
                        style="-fx-background-color: #1e3c72; -fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;">
                    <effect>
                        <DropShadow color="#1e3c7266" radius="10" spread="0.3"/>
                    </effect>
                </Button>

                <!-- Register Link -->
                <HBox alignment="CENTER" spacing="5">
                    <Label text="Don't have an account?" style="-fx-font-size: 12; -fx-text-fill: #666666;"/>
                    <Hyperlink fx:id="registerLink" text="Register here" onAction="#handleRegister"
                               style="-fx-font-size: 12; -fx-text-fill: #1e3c72; -fx-underline: true;"/>
                </HBox>

                <!-- Progress Indicator (Hidden by default) -->
                <ProgressIndicator fx:id="progressIndicator" visible="false" prefWidth="40" prefHeight="40"/>

            </VBox>

            <!-- Footer -->
            <Label text="© 2025 JetStream Airlines. All rights reserved." 
                   style="-fx-text-fill: white; -fx-font-size: 11; -fx-opacity: 0.8;"/>

        </VBox>
    </center>

</BorderPane>

