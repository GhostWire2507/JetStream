<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.6"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.jetstream.controller.AdminDashboardController"
            prefHeight="700.0" prefWidth="1200.0">

    <!-- Top Bar -->
    <top>
        <HBox style="-fx-background-color: #1e3c72; -fx-padding: 15 15 15 15;" spacing="20" alignment="CENTER_LEFT">
            <Label text="âœˆ JetStream Airlines" style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="welcomeLabel" text="Welcome, Admin" style="-fx-text-fill: white; -fx-font-size: 14;"/>
            <Button text="Logout" onAction="#handleLogout"
                    style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-font-size: 12; -fx-padding: 8 15 8 15; -fx-background-radius: 5;"/>
        </HBox>
    </top>

    <!-- Left Sidebar -->
    <left>
        <VBox style="-fx-background-color: #f5f5f5; -fx-padding: 20 20 20 20;" spacing="10" prefWidth="220">
            <Label text="ADMIN PANEL" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #666;"/>
            <Separator/>

            <Button text="ðŸ“Š Dashboard" onAction="#showDashboard" prefWidth="180"
                    style="-fx-background-color: #1e3c72; -fx-text-fill: white; -fx-padding: 10 10 10 10; -fx-alignment: CENTER_LEFT;"/>
            <Button text="âœˆ Manage Flights" onAction="#showFlights" prefWidth="180"
                    style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-padding: 10 10 10 10; -fx-alignment: CENTER_LEFT;"/>
            <Button text="ðŸ‘¥ Manage Users" onAction="#showUsers" prefWidth="180"
                    style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-padding: 10 10 10 10; -fx-alignment: CENTER_LEFT;"/>
            <Button text="ðŸŽ« View Bookings" onAction="#showBookings" prefWidth="180"
                    style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-padding: 10 10 10 10; -fx-alignment: CENTER_LEFT;"/>
            <Button text="âŒ Cancellations" onAction="#showCancellations" prefWidth="180"
                    style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-padding: 10 10 10 10; -fx-alignment: CENTER_LEFT;"/>
            <Button text="ðŸ’° Revenue Reports" onAction="#showReports" prefWidth="180"
                    style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-padding: 10 10 10 10; -fx-alignment: CENTER_LEFT;"/>
            <Button text="âš™ Settings" onAction="#showSettings" prefWidth="180"
                    style="-fx-background-color: transparent; -fx-text-fill: #333; -fx-padding: 10 10 10 10; -fx-alignment: CENTER_LEFT;"/>
        </VBox>
    </left>

    <!-- Center Content -->
    <center>
        <VBox spacing="20" style="-fx-padding: 30 30 30 30;">

            <!-- Dashboard Title -->
            <Label text="Admin Dashboard" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #1e3c72;"/>

            <!-- Statistics Cards -->
            <GridPane hgap="20" vgap="20">
                <!-- Total Flights -->
                <VBox style="-fx-background-color: white; -fx-padding: 20 20 20 20; -fx-background-radius: 10;" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <effect><DropShadow color="#00000033" radius="10"/></effect>
                    <Label text="Total Flights" style="-fx-font-size: 14; -fx-text-fill: #666;"/>
                    <Label fx:id="totalFlightsLabel" text="0" style="-fx-font-size: 36; -fx-font-weight: bold; -fx-text-fill: #1e3c72;"/>
                    <Label text="Active flights in system" style="-fx-font-size: 11; -fx-text-fill: #999;"/>
                </VBox>

                <!-- Total Bookings -->
                <VBox style="-fx-background-color: white; -fx-padding: 20 20 20 20; -fx-background-radius: 10;" GridPane.columnIndex="1" GridPane.rowIndex="0">
                    <effect><DropShadow color="#00000033" radius="10"/></effect>
                    <Label text="Total Bookings" style="-fx-font-size: 14; -fx-text-fill: #666;"/>
                    <Label fx:id="totalBookingsLabel" text="0" style="-fx-font-size: 36; -fx-font-weight: bold; -fx-text-fill: #4caf50;"/>
                    <Label text="Confirmed reservations" style="-fx-font-size: 11; -fx-text-fill: #999;"/>
                </VBox>

                <!-- Total Users -->
                <VBox style="-fx-background-color: white; -fx-padding: 20 20 20 20; -fx-background-radius: 10;" GridPane.columnIndex="2" GridPane.rowIndex="0">
                    <effect><DropShadow color="#00000033" radius="10"/></effect>
                    <Label text="Total Users" style="-fx-font-size: 14; -fx-text-fill: #666;"/>
                    <Label fx:id="totalUsersLabel" text="0" style="-fx-font-size: 36; -fx-font-weight: bold; -fx-text-fill: #ff9800;"/>
                    <Label text="Registered customers" style="-fx-font-size: 11; -fx-text-fill: #999;"/>
                </VBox>

                <!-- Total Revenue -->
                <VBox style="-fx-background-color: white; -fx-padding: 20 20 20 20; -fx-background-radius: 10;" GridPane.columnIndex="3" GridPane.rowIndex="0">
                    <effect><DropShadow color="#00000033" radius="10"/></effect>
                    <Label text="Total Revenue" style="-fx-font-size: 14; -fx-text-fill: #666;"/>
                    <Label fx:id="totalRevenueLabel" text="R 0.00" style="-fx-font-size: 36; -fx-font-weight: bold; -fx-text-fill: #2196f3;"/>
                    <Label text="From all bookings" style="-fx-font-size: 11; -fx-text-fill: #999;"/>
                </VBox>
            </GridPane>

            <!-- Recent Activity -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20 20 20 20; -fx-background-radius: 10;">
                <effect><DropShadow color="#00000033" radius="10"/></effect>
                <Label text="Recent Activity" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                <Separator/>
                
                <ScrollPane fitToWidth="true" prefHeight="200" style="-fx-background-color: transparent;">
                    <VBox fx:id="activityContainer" spacing="10"/>
                </ScrollPane>
            </VBox>



        </VBox>
    </center>

</BorderPane>

