<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.6"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.jetstream.controllers.ReservationController"
            prefHeight="700.0" prefWidth="1200.0">

    <!-- Top Bar -->
    <top>
        <HBox style="-fx-background-color: #1e3c72; -fx-padding: 15 15 15 15;" spacing="20" alignment="CENTER_LEFT">
            <Label text="âœˆ JetStream Airlines - Book Flight" style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="welcomeLabel" text="Welcome, Customer" style="-fx-text-fill: white; -fx-font-size: 14;"/>
            <Button text="Back to Dashboard" onAction="#onBack"
                    style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-font-size: 12; -fx-padding: 8 15 8 15; -fx-background-radius: 5;"/>
        </HBox>
    </top>

    <!-- Left Sidebar -->
    <left>
        <VBox style="-fx-background-color: #f5f5f5; -fx-padding: 20 20 20 20;" spacing="10" prefWidth="220">
            <Label text="BOOKING PROCESS" style="-fx-font-size: 14; -fx-font-weight: bold; -fx-text-fill: #666;"/>
            <Separator/>
            <Label fx:id="step1Label" text="Step 1: Flight Selection" style="-fx-font-size: 12; -fx-text-fill: #4caf50; -fx-font-weight: bold;"/>
            <Label fx:id="step2Label" text="Step 2: Passenger Details" style="-fx-font-size: 12; -fx-text-fill: #666;"/>
            <Label fx:id="step3Label" text="Step 3: Seat Selection" style="-fx-font-size: 12; -fx-text-fill: #666;"/>
            <Label fx:id="step4Label" text="Step 4: Payment" style="-fx-font-size: 12; -fx-text-fill: #666;"/>
            <Label fx:id="step5Label" text="Step 5: Confirmation" style="-fx-font-size: 12; -fx-text-fill: #666;"/>
        </VBox>
    </left>

    <!-- Center Content - Responsive Layout -->
    <center>
        <VBox spacing="0" style="-fx-padding: 0;">

            <!-- Static Header Section -->
            <VBox spacing="20" style="-fx-padding: 30 30 20 30;">
                <!-- Title -->
                <Label text="Book Your Flight" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-text-fill: #1e3c72;"/>

                <!-- Statistics Cards -->
                <GridPane hgap="20" vgap="20">
                    <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <effect><DropShadow color="#00000033" radius="10"/></effect>
                        <Label text="Total Bookings" style="-fx-font-size: 14; -fx-text-fill: #666;"/>
                        <Label fx:id="txtTotalBookings" text="0" style="-fx-font-size: 36; -fx-font-weight: bold; -fx-text-fill: #1e3c72;"/>
                        <Label text="Active reservations" style="-fx-font-size: 11; -fx-text-fill: #999;"/>
                    </VBox>
                    <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <effect><DropShadow color="#00000033" radius="10"/></effect>
                        <Label text="Total Passengers" style="-fx-font-size: 14; -fx-text-fill: #666;"/>
                        <Label fx:id="txtTotalPassengers" text="0" style="-fx-font-size: 36; -fx-font-weight: bold; -fx-text-fill: #4caf50;"/>
                        <Label text="Served customers" style="-fx-font-size: 11; -fx-text-fill: #999;"/>
                    </VBox>
                </GridPane>
            </VBox>

            <!-- Scrollable Dynamic Content Section -->
            <ScrollPane fitToWidth="true" style="-fx-border-color: transparent; -fx-padding: 0;" VBox.vgrow="ALWAYS">
                <VBox spacing="20" style="-fx-padding: 0 30 20 30;">

                    <!-- Step Panes -->
                    <VBox fx:id="step1Pane" spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
                        <effect><DropShadow color="#00000033" radius="10"/></effect>
                        <Label text="Step 1: Flight Selection" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                        <Separator/>
                        <Label text="Select your flight from the available options:" style="-fx-font-size: 14;"/>
                        <ComboBox fx:id="flightComboBox" promptText="Select Flight" prefWidth="400"/>
                        <Label text="Tip: Choose your desired flight to continue" style="-fx-font-size: 12; -fx-text-fill: #666;"/>
                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <Button fx:id="btnContinueStep1" text="âœ“ Continue to Passenger Details" onAction="#onContinueStep1"
                                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-padding: 12 20 12 20; -fx-background-radius: 5; -fx-font-size: 13; -fx-font-weight: bold;" disable="true"/>
                            <Label text="Select a flight to proceed" style="-fx-font-size: 11; -fx-text-fill: #999;"/>
                        </HBox>
                    </VBox>

                    <VBox fx:id="step2Pane" spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;" visible="false">
                        <effect><DropShadow color="#00000033" radius="10"/></effect>
                        <Label text="Step 2: Passenger Details" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                        <Separator/>
                        <TextField fx:id="txtPassengerName" promptText="Enter passenger full name" prefWidth="400"/>
                        <TextField fx:id="txtPassengerEmail" promptText="Enter passenger email" prefWidth="400"/>
                    </VBox>

                    <VBox fx:id="step3Pane" spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;" visible="false">
                        <effect><DropShadow color="#00000033" radius="10"/></effect>
                        <Label text="Step 3: Seat Selection" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                        <Separator/>
                        <TextField fx:id="txtSeatNumber" promptText="Enter seat number (e.g., 12A)" prefWidth="400"/>
                    </VBox>

                    <VBox fx:id="step4Pane" spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;" visible="false">
                        <effect><DropShadow color="#00000033" radius="10"/></effect>
                        <Label text="Step 4: Payment" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                        <Separator/>
                        <Label text="Enter the booking amount:" style="-fx-font-size: 14;"/>
                        <TextField fx:id="txtPaymentAmount" promptText="Enter amount (e.g., 1500.00)" prefWidth="400"/>
                        <Label text="Tip: Enter the total fare amount for this booking" style="-fx-font-size: 12; -fx-text-fill: #666;"/>
                    </VBox>

                    <VBox fx:id="step5Pane" spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;" visible="false">
                        <effect><DropShadow color="#00000033" radius="10"/></effect>
                        <Label text="Step 5: Confirmation" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                        <Separator/>
                        <Label text="Review your booking details:" style="-fx-font-size: 14;"/>
                        <Label fx:id="confirmationDetails" text="Booking details will be shown here..." style="-fx-font-size: 12; -fx-text-fill: #666;"/>
                    </VBox>

                    <!-- Recent Reservations -->
                    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
                        <effect><DropShadow color="#00000033" radius="10"/></effect>
                        <Label text="Recent Reservations" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                        <Separator/>
                        <TableView fx:id="tblReservations" prefHeight="200" prefWidth="600">
                            <columns>
                                <TableColumn fx:id="colPassengerName" text="Passenger Name" prefWidth="200"/>
                                <TableColumn fx:id="colSeatNumber" text="Seat Number" prefWidth="150"/>
                                <TableColumn fx:id="colFlightNumber" text="Flight Number" prefWidth="150"/>
                                <TableColumn fx:id="colBookingId" text="Booking ID" prefWidth="100"/>
                            </columns>
                        </TableView>
                    </VBox>

                </VBox>
            </ScrollPane>

            <!-- Fixed Navigation Buttons Section -->
            <HBox spacing="15" alignment="CENTER" style="-fx-background-color: #f9f9f9; -fx-padding: 15 30 15 30; -fx-border-color: #ddd #ddd #f5f5f5 #ddd; -fx-border-width: 1;">
                <Button fx:id="btnPrevious" text="â—€ Previous" onAction="#onPrevious"
                        style="-fx-background-color: #666; -fx-text-fill: white; -fx-padding: 12 20 12 20; -fx-background-radius: 5; -fx-font-size: 12; -fx-font-weight: bold;"/>
                <Button fx:id="btnNext" text="Next: Passenger Details â–¶" onAction="#onNext"
                        style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-padding: 12 20 12 20; -fx-background-radius: 5; -fx-font-size: 12; -fx-font-weight: bold;"/>
            </HBox>

        </VBox>
    </center>

    <!-- Bottom Progress Bar -->
    <bottom>
        <VBox style="-fx-background-color: #f5f5f5; -fx-padding: 15 30 15 30;">
            <Label text="ðŸ“Š Booking Progress" style="-fx-font-size: 13; -fx-text-fill: #333; -fx-font-weight: bold;"/>
            <ProgressBar fx:id="bookingProgressBar" progress="0.0" prefWidth="1140" prefHeight="15" style="-fx-padding: 2;"/>
            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 8 0 0 0;">
                <Label fx:id="progressLabel" text="0% Complete - Flight Selection" style="-fx-font-size: 12; -fx-text-fill: #1e3c72; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Step " style="-fx-font-size: 11; -fx-text-fill: #666;"/>
                <Label fx:id="stepCounter" text="1 of 5" style="-fx-font-size: 11; -fx-text-fill: #1e3c72; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
